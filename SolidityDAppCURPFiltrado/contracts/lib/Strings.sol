    function _obtenerUltimoDigito(string memory _base)
        private
        pure
        returns (uint) {
    
        uint dv;
        uint c;

        for(uint i=0; i < length(_base); i++)	{

            string memory valor1 = _substring(_base, 1, int(i));
            uint valor2 = stringtoASCII(valor1);
            c = tabla(valor1,valor2);  
            dv = dv + c * (18-i);		
        }
       
        dv = dv % 10;
        if ( dv == 0) 
        	return 0;
        else 
            return (10-dv);
    }

    function tabla(string memory i, uint x )
        private 
        pure 
        returns(uint){
        if(stringtoASCII(i) >= stringtoASCII('0') && stringtoASCII(i) <= stringtoASCII('9')) return x-48;
        else if (stringtoASCII(i) >= stringtoASCII('A') && stringtoASCII(i) <= stringtoASCII('N')) return x-55;
        else if (stringtoASCII(i) >= stringtoASCII('O') && stringtoASCII(i) <= stringtoASCII('Z')) return x-54;
        else return 0;
    }

   function stringtoASCII(string memory s) 
        private 
        pure 
        returns (uint) {
        bytes memory b = bytes(s);
        uint result = 0;
        for (uint256 i = 0; i < b.length; i++) {
            uint256 c = uint256(uint8(b[i]));
            result = result * 10 + (c);            
        }
        return result;
    }
